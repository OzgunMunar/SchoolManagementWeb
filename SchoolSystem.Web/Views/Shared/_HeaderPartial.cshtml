@using Microsoft.AspNetCore.Identity
@using SchoolSystem.Domain.Entities
@inject SignInManager<ApplicationUser> signInManager

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow">
        <div class="container-fluid justify-content-center">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/img/logo.jpg" width="50" height="50" />
            </a>
            @* <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button> *@
            <i class="bi bi-three-dots-vertical px-2"></i>
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                    @if(signInManager.IsSignedIn(User))
                    {
                        <a class="nav-link text-dark navbar-links fs-5" asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                    }
                    else
                    {
                        <a class="nav-link text-dark navbar-links fs-5" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    }
                    </li> 
                    <li class="nav-item">
                        <a class="nav-link text-dark navbar-links fs-5" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark navbar-links fs-5" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                    </li>
                </ul>
            </div>
            <div class="ms-3">
                @if (Context.Request.Path != "/Identity/Account/Login")
                {
                    <partial name="_LoginPartial"></partial>
                }
            </div>
        </div>
    </nav>
</header>