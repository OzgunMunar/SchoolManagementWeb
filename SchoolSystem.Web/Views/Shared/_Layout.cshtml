<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolSystem.Web</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SchoolSystem.Web.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid justify-content-center">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo.jpg" width="50" height="50"/>
                </a>
                @* <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button> *@
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-around">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark navbar-links fs-5" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark navbar-links fs-5" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark navbar-links fs-5" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                    </ul>
                </div>
                <div class="ms-3">
                    <partial name="_LoginPartial"></partial>
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer ">
        <div class="container-fluid d-flex justify-content-between align-items-center">

            <div class="mt-3">
                <p>&copy; 2024 - Clever School Inc.</p>
            </div>
            
            <div>
                <a href="tel:+905425424242" class="text-decoration-none text-black pe-2"><i class="bi bi-telephone-fill">&nbsp;(0542) 542 42 42</i></a>
                <i class="bi bi-three-dots-vertical px-2"></i>
                <a href="to:management@dummywebsite.com" class="text-decoration-none text-black ps-2">
                    <i class="bi bi-envelope-fill">&nbsp;management@dummywebsite.com</i>
                </a>
            </div>

            <div class="top-social-media d-flex justify-content-evenly align-items-center">
                <div class="top-facebook px-2">
                    <a href="#" class="text-decoration-none text-black social-link">
                        <i class="bi bi-facebook"></i>
                    </a>
                </div>
                <div class="top-twitter px-2">
                    <a href="#" class="text-decoration-none text-black social-link">
                        <i class="bi bi-twitter"></i>
                    </a>
                </div>
                <div class="top-youtube px-2">
                    <a href="#" class="text-decoration-none text-black social-link">
                        <i class="bi bi-youtube"></i>
                    </a>
                </div>
                <div class="top-instagram px-2">
                    <a href="#" class="text-decoration-none text-black social-link">
                        <i class="bi bi-instagram"></i>
                    </a>
                </div>
            </div>

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
