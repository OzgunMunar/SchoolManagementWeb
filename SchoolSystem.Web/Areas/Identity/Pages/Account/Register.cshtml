@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container align-content-center mt-3">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <section>
                        <h1 class="text-center">Create a new account</h1>
                        <hr />
                    </section>
                    <section>
                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                            <div class="input-group mb-3">
                                <span class="input-group-text">@@</span>
                                <input asp-for="Input.Email" class="form-control form-control-md" autocomplete="off" aria-required="true" placeholder="name@example.com" autofocus />
                            </div>

                            <div class="input-group mb-3">
                                <span class="input-group-text"><i class="bi bi-key-fill"></i></span>
                                <input asp-for="Input.Password" class="form-control form-control-md" autocomplete="off" aria-required="true" placeholder="Password" />
                            </div>

                            <div class="input-group mb-3">
                                <span class="input-group-text"><i class="bi bi-check"></i></span>
                                <input asp-for="Input.ConfirmPassword" class="form-control form-control-md" autocomplete="off" aria-required="true" placeholder="Confirm Password" />
                            </div>

                            <div class="input-group mb-3">
                                <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select form-select-md">
                                    <option disabled selected>Select Role</option>
                                </select>
                            </div>

                            <div class="input-group mb-3">
                                <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                                <input asp-for="Input.FirstName" class="form-control form-control-md" autocomplete="off" aria-required="true" placeholder="First Name" />
                            </div>

                            <div class="input-group mb-3">
                                <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                                <input asp-for="Input.LastName" class="form-control form-control-md" aria-expanded="off" aria-required="true" placeholder="Last Name" />
                            </div>

                            <div class="input-group mb-3">
                                <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                <input asp-for="Input.PhoneNumber" class="form-control form-control-md" aria-expanded="off" aria-required="true" placeholder="(###) ### ## ##" />
                            </div>

                            <div class="input-group mb-3">
                                <span class="input-group-text"><i class="bi bi-gift"></i></span>
                                <input type="date" asp-for="Input.BirthDay" class="form-control form-control-md" aria-required="true" placeholder="Birth Day" value="@Model.DefaultBirthday" />
                            </div>

                            <div class="input-group mb-3">
                                <span class="input-group-text"><i class="bi bi-gender-ambiguous"></i></span>
                                <select asp-for="Input.Gender" asp-items="@Model.Input.GenderList" class="form-select form-select-md">
                                    <option disabled selected>Select Gender</option>
                                </select>
                            </div>

                            <div class="input-group mb-3">
                                <span class="input-group-text"><i class="bi bi-globe-americas"></i></span>
                                <select asp-for="Input.NationalityGuid" asp-items="@Model.Input.NationalityList" class="form-select form-select-md">
                                    <option disabled selected>Select Nationality</option>
                                </select>
                            </div>

                            <div class="input-group mb-3">
                                <span class="input-group-text"><i class="bi bi-person-bounding-box"></i></span>
                                <input asp-for="Input.ProfilePictureURL" class="form-control form-control-md" autocomplete="off" aria-required="false" placeholder="Profile Picture URL" />
                            </div>

                            <div class="input-group mb-3">
                                <span class="input-group-text"><i class="bi bi-house"></i></span>
                                <input asp-for="Input.Address" class="form-control form-control-md" aria-expanded="off" aria-required="true" placeholder="Address" />
                            </div>
                            <hr />

                            <div class="form-floating w-100 d-flex justify-content-center align-items-center">
                                <button id="registerSubmit" type="submit" class="w-50 btn btn-md rounded-0 softblue-bgcolor text-white">
                                    <i class="bi bi-person-plus"></i>
                                    <span class="ms-1">Register</span>
                                </button>
                            </div>

                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

