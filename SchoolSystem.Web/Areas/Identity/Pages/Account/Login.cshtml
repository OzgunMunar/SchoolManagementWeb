@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container align-content-center mt-3">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <section>
                        <h1 class="text-center">Use a local account to login</h1>
                        <hr />
                    </section>
                    <section>
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                            <div class="input-group mb-3">
                                <span class="input-group-text">@@</span>
                                <input asp-for="Input.Email" class="form-control form-control-md" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="input-group mb-3">
                                <span class="input-group-text"><i class="bi bi-key-fill"></i></span>
                                <input asp-for="Input.Password" class="form-control form-control-md" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="checkbox mb-2">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>

                            <div class="form-floating mb-3 w-100 d-flex justify-content-center align-items-center">
                                <button id="login-submit" type="submit" class="w-50 btn btn-lg rounded-0 softblue-bgcolor text-white">
                                    <i class="bi bi-door-open"></i>
                                    <span class="ms-1">Log in</span>
                                </button>
                            </div>
                            <div class="form-floating d-flex justify-content-around align-items-center">
                                <p>
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                </p>
                                @* <p>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                </p> *@
                                <p>
                                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                                </p>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
